<?xml version="1.0" encoding="utf-8"?>
<scpd xmlns="urn:schemas-upnp-org:service-1-0">
  <specVersion>
    <major>1</major>
    <minor>0</minor>
  </specVersion>
  <actionList>
    <action>
      <name>PushManifest</name>
      <argumentList>
        <argument>
          <name>Uri</name>
          <direction>in</direction>
          <relatedStateVariable>A_ARG_TYPE_String</relatedStateVariable>
        </argument>
      </argumentList>
    </action>
    <action>
      <name>SetUpdateFeedParams</name>
      <argumentList>
        <argument>
          <name>Topic</name>
          <direction>in</direction>
          <relatedStateVariable>UpdateTopic</relatedStateVariable>
        </argument>
        <argument>
          <name>Channel</name>
          <direction>in</direction>
          <relatedStateVariable>UpdateChannel</relatedStateVariable>
        </argument>
      </argumentList>
    </action>
    <action>
      <name>GetUpdateFeedParams</name>
      <argumentList>
        <argument>
          <name>Topic</name>
          <direction>out</direction>
          <relatedStateVariable>UpdateTopic</relatedStateVariable>
        </argument>
        <argument>
          <name>Channel</name>
          <direction>out</direction>
          <relatedStateVariable>UpdateChannel</relatedStateVariable>
        </argument>
      </argumentList>
    </action>
    <action>
      <name>GetUpdateStatus</name>
      <argumentList>
        <argument>
          <name>UpdateStatus</name>
          <direction>out</direction>
          <relatedStateVariable>UpdateStatus</relatedStateVariable>
        </argument>
      </argumentList>
    </action>
    <action>
      <name>Apply</name>
    </action>
    <action>
      <name>Restore</name>
    </action>
  </actionList>
  <serviceStateTable>
    <stateVariable sendEvents="yes">
      <name>UpdateStatus</name>
      <dataType>string</dataType>
    </stateVariable>
    <stateVariable sendEvents="yes">
      <name>UpdateTopic</name>
      <dataType>string</dataType>
    </stateVariable>
    <stateVariable sendEvents="yes">
      <name>UpdateChannel</name>
      <allowedValueList>
        <allowedValue>release</allowedValue>
        <allowedValue>beta</allowedValue>
        <allowedValue>development</allowedValue>
        <allowedValue>nightly</allowedValue>
      </allowedValueList>
      <dataType>string</dataType>
    </stateVariable>
    <stateVariable sendEvents="no">
      <name>A_ARG_TYPE_String</name>
      <dataType>string</dataType>
    </stateVariable>
  </serviceStateTable>
</scpd>
